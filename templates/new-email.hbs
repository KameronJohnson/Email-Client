<h2> Compose </h2>

<form>
  <div class="form group">
    <label for="sender"></label>
    {{input value=sender id="sender" class="form control"
    placeholder="Sender's email" required="required"}}
  </div>

  <div class="form group">
    <label for="recipient"></label>
    {{input value=recipient id="recipient" class="form control"
    placeholder="Recipient's email"}}
  </div>

  <br>

  <div class="form group">
    <label for="subjectLine">Subject:</label>
    {{input value=subjectLine id="subjectLine" class="form control"}}
  </div>

  <div class="form-group">
  <label for="body">Message:</label>
  {{textarea value=body id="body" class="form-control" rows="5"}}
</div>

  <button class="btn btn-info" {{action "sendMessage"}}>Send Message</button>
</form>
